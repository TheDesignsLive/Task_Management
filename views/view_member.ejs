<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Members</title>
  <style>
    /* ====== Body ====== */
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #3C3A3A;
    }

    /* ====== Layout ====== */
    .layout {
      display: flex;
      min-height: calc(100vh - 60px);
    }

    .sidebar-container {
      width: 55px;
    }

    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 10px;
      margin-left: 0;
      background-color: #f4f4f4;
    }

    /* ====== Sub Header ====== */
    .sub-header {
      display: flex;
      gap: 10px;
      margin-bottom: 10px;
      margin-left: 26px;
      margin-right: 70px;
    }

    .sub-header input[type="text"] {
      flex: 1;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 100px;
    }

    .sub-header button {
      padding: 13px 18px;
      border: none;
      cursor: pointer;
      background-color: #209595;
      color: white;
      border-radius: 100px;
      font-weight: bold;
      margin-top:30px ;
    }

    /* ====== Table ====== */
    table {
      margin-left: 50px;
      width: 90%;
      border-collapse: collapse;
      margin-top: 10px;
      background-color: white;
    }

    table th, table td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: center;
    }

    table th {
      background-color: #CDF4F4;
    }

    /* ====== Suspend Button ====== */
    .action-btn.suspend-btn {
      margin-right: 5px;
      font-weight:700;
      padding: 5px 8px;
      border: none;
      border-radius: 100px;
      cursor: pointer;
      color: white;
      background-color: #f44336;
    }

    /* ====== Icon Actions ====== */
    .action-icon {
      margin-right: 10px;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
    }

    .action-icon svg {
      transition: opacity 0.2s;
    }

    .action-icon:hover svg {
      opacity: 0.7;
    }

    .edit-icon svg { fill: #FFD000; }
    .delete-icon svg { fill: #ed1e1e; }

    .no-records {
      margin-top: 20px;
      text-align: center;
      color: #555;
    }

    #searchMember {
      margin-top: 30px;
      max-width: 400px;
      margin-left: 30px;
      margin-right: 600px;
    }

    .nav-item.active {
      border-left: 3px solid #00a896;
      background-color: #095959;
    }

    .actions-container {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }

    button { border-radius: 100px; }

    /* ===== Dialog (added only, no change above CSS) ===== */
    .dialog-overlay {
      position:fixed;
      top:0; left:0;
      width:100%; height:100%;
      background:rgba(0,0,0,0.5);
      display:none;
      justify-content:center;
      align-items:center;
      z-index:999;
    }

    .dialog-box {
      background:#fff;
      width:380px;
      padding:25px;
      border-radius:8px;
      position:relative;
    }

    .dialog-box input, .dialog-box select {
      width:100%;
      padding:8px;
      margin-bottom:10px;
      border:1px solid #ccc;
      border-radius:5px;
    }

    .dialog-box label {
      font-size:13px;
      font-weight:bold;
    }

    .dialog-box button {
      width:100%;
      padding:10px;
      background:#209595;
      color:#fff;
      border:none;
      border-radius:5px;
      cursor:pointer;
    }

    .close-btn {
      position:absolute;
      top:6px;
      right:10px;
      font-size:20px;
      cursor:pointer;
      font-weight:bold;
    }

    .close-btn:hover { color:red; }
  </style>
</head>
<body>

<%- include('navbar') %>

<div class="layout">
  <div class="sidebar-container">
    <%- include('sidebar') %>
  </div>

  <div class="main-content">
    <div class="sub-header">
      <input type="text" placeholder="Search member..." id="searchMember">
      <button onclick="location.href='/add-category'">Add Category</button>

      <!-- ONLY CHANGE: open dialog instead of redirect -->
      <button onclick="openDialog()">Add Member</button>
    </div>

    <% if (users && users.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th><th>Name</th><th>Email</th><th>Status</th><th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.status %></td>
            <td>
              <div class="actions-container">
                <button class="action-btn suspend-btn"
                  onclick="location.href='/suspend-member/<%= user.id %>'">
                  Suspend
                </button>

                <a href="/edit-member/<%= user.id %>" class="action-icon edit-icon">
                  <svg viewBox="0 0 24 24" width="20" height="20">
                    <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM21.41 6.34c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                  </svg>
                </a>

                <a href="/delete-member/<%= user.id %>" class="action-icon delete-icon">
                  <svg viewBox="0 0 24 24" width="20" height="20">
                    <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                  </svg>
                </a>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="no-records">No records found</div>
    <% } %>
  </div>
</div>

<!-- ===== ADD MEMBER DIALOG (from code 1) ===== -->
<div class="dialog-overlay" id="dialogBox">
  <div class="dialog-box">
    <span class="close-btn" onclick="closeDialog()">âœ–</span>

    <form action="/add-member" method="POST" enctype="multipart/form-data">

      <label>Role</label>
      <select name="role_id" required>
        <option value="">Select Role</option>
        <% if (roles) { roles.forEach(r => { %>
          <option value="<%= r.id %>"><%= r.role_name %></option>
        <% }) } %>
      </select>

      <input type="text" name="name" placeholder="Name" required>
      <input type="email" name="email" placeholder="Email" required>
      <input type="text" name="phone" placeholder="Phone">
      <input type="password" name="password" placeholder="Password" required>

      <label>Profile Picture (optional)</label>
      <input type="file" name="profile_pic">

      <button type="submit">Submit</button>
    </form>
  </div>
</div>

<script>
function openDialog() {
  document.getElementById("dialogBox").style.display = "flex";
}
function closeDialog() {
  document.getElementById("dialogBox").style.display = "none";
}
</script>

</body>
</html>
