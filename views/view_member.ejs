<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Members</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #3C3A3A;
    }

    .layout {
      display: flex;
      min-height: calc(100vh - 60px);
    }

    .sidebar-container {
      width: 55px;
    }

    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 10px;
      margin-left: 0;
      background-color: #f4f4f4;
    }

    .sub-header {
      display: flex;
      gap: 10px;
      margin-bottom: 10px;
    }

    .sub-header input[type="text"] {
      flex: 1;
      padding: 8px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .sub-header button {
      padding: 8px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      background-color: #4CAF50;
      color: white;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      background-color: white;
    }

    table th, table td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: left;
    }

    table th {
      background-color: #CDF4F4;
    }

    .action-btn {
      margin-right: 5px;
      padding: 5px 8px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      color: white;
    }

    .edit-btn { background-color: #2196F3; }
    .suspend-btn { background-color: #f44336; }
    .delete-btn { background-color: #9C27B0; }

    .no-records {
      margin-top: 20px;
      text-align: center;
      color: #555;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include('navbar') %>

  <div class="layout">
    <!-- Sidebar -->
    <div class="sidebar-container">
      <%- include('sidebar') %>
    </div>

    <!-- Main content -->
    <div class="main-content">
      <!-- Search and buttons -->
      <div class="sub-header">
        <input type="text" placeholder="Search member..." id="searchMember">
        <button onclick="location.href='/add-member'">Add Member</button>
        <button onclick="location.href='/add-category'">Add Category</button>
      </div>

      <!-- Members Table -->
      <% if (users && users.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.status %></td>
                <td>
                  <button class="action-btn edit-btn" onclick="location.href='/edit-member/<%= user.id %>'">Edit</button>
                  <button class="action-btn suspend-btn" onclick="location.href='/suspend-member/<%= user.id %>'">Suspend</button>
                  <button class="action-btn delete-btn" onclick="location.href='/delete-member/<%= user.id %>'">Delete</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <div class="no-records">No records found</div>
      <% } %>
    </div>
  </div>

</body>
</html>
