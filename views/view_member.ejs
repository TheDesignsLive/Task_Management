<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Members</title>
  <style>
    body { margin:0; font-family:Arial; background:#3C3A3A; }

    .layout { display:flex; min-height:calc(100vh - 60px); }
    .sidebar-container { width:55px; }
    .main-content { flex:1; padding:10px; background:#f4f4f4; }

    .sub-header { display:flex; gap:10px; margin:10px 70px 10px 26px; }
    .sub-header input { flex:1; padding:8px; border-radius:100px; border:1px solid #ccc; }
    .sub-header button { padding:13px 18px; border:none; cursor:pointer; background:#209595; color:#fff; border-radius:100px; font-weight:bold; margin-top:30px; }

    table { margin-left:50px; width:90%; border-collapse:collapse; background:#fff; }
    th,td { padding:10px; border:1px solid #ccc; text-align:center; }
    th { background:#CDF4F4; }

    .action-btn.suspend-btn { padding:5px 8px; border:none; border-radius:100px; color:#fff; background:#f44336; }

    .actions-container { display:flex; justify-content:center; gap:10px; }

    /* ===== Dialog ===== */
    .dialog-overlay {
      position:fixed;
      top:0; left:0;
      width:100%; height:100%;
      background:rgba(0,0,0,0.5);
      display:none;
      justify-content:center;
      align-items:center;
      z-index:999;
    }

    .dialog-box {
      background:#fff;
      width:380px;
      padding:25px;
      border-radius:8px;
      position:relative;
    }

    .dialog-box input, .dialog-box select {
      width:100%;
      padding:8px;
      margin-bottom:10px;
      border:1px solid #ccc;
      border-radius:5px;
    }

    .dialog-box label { font-size:13px; font-weight:bold; }

    .dialog-box button {
      width:100%;
      padding:10px;
      background:#209595;
      color:#fff;
      border:none;
      border-radius:5px;
      cursor:pointer;
    }

    .close-btn {
      position:absolute;
      top:6px;
      right:10px;
      font-size:20px;
      cursor:pointer;
      font-weight:bold;
    }

    .close-btn:hover { color:red; }
  </style>
</head>
<body>

<!-- Navbar -->
<%- include('navbar') %>

<div class="layout">

  <!-- Sidebar -->
  <div class="sidebar-container">
    <%- include('sidebar') %>
  </div>

  <div class="main-content">

    <div class="sub-header">
      <input type="text" placeholder="Search member..." id="searchMember">
      <button onclick="location.href='/add-category'">Add Category</button>
      <button onclick="openDialog()">Add Member</button>
    </div>

    <% if (users && users.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>ID</th><th>Name</th><th>Email</th><th>Status</th><th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.status %></td>
          <td>
            <div class="actions-container">
              <button class="action-btn suspend-btn" onclick="location.href='/suspend-member/<%= user.id %>'">Suspend</button>
              <a href="/edit-member/<%= user.id %>">‚úèÔ∏è</a>
              <a href="/delete-member/<%= user.id %>">üóëÔ∏è</a>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
      <div style="text-align:center;margin-top:20px;">No records found</div>
    <% } %>

  </div>
</div>

<!-- ================= ADD MEMBER DIALOG ================= -->
<div class="dialog-overlay" id="dialogBox">
  <div class="dialog-box">

    <span class="close-btn" onclick="closeDialog()">‚úñ</span>

    <form action="/add-member" method="POST" enctype="multipart/form-data">

      <!-- Role dropdown -->
      <label>Role</label>
      <select name="role_id" required>
        <option value="">Select Role</option>
        <% if (roles) { roles.forEach(r => { %>
          <option value="<%= r.id %>"><%= r.role_name %></option>
        <% }) } %>
      </select>

      <input type="text" name="name" placeholder="Name" required>
      <input type="email" name="email" placeholder="Email" required>
      <input type="text" name="phone" placeholder="Phone">
      <input type="password" name="password" placeholder="Password" required>

      <label>Profile Picture (optional)</label>
      <input type="file" name="profile_pic">

      <button type="submit">Submit</button>
    </form>

  </div>
</div>

<script>
function openDialog() {
  document.getElementById("dialogBox").style.display = "flex";
}
function closeDialog() {
  document.getElementById("dialogBox").style.display = "none";
}
</script>

</body>
</html>
