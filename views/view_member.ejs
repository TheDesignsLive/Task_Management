<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Members</title>
  <style>
    /* ====== Body ====== */
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #3C3A3A;
    }

    /* ====== Layout ====== */
    .layout {
      display: flex;
      min-height: calc(100vh - 60px);
    }

    .sidebar-container {
      width: 55px;
    }

    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 10px;
      margin-left: 0;
      background-color: #f4f4f4;
    }

    /* ====== Sub Header ====== */
    .sub-header {
      display: flex;
      gap: 10px;
      margin-bottom: 10px;
    }

    .sub-header input[type="text"] {
      flex: 1;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 100px;
    }

    .sub-header button {
      padding: 13px 18px;
      border: none;
      cursor: pointer;
      background-color: #209595;
      color: white;
      border-radius: 100px;
      font-weight: bold;
    }

    /* ====== Table ====== */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      background-color: white;
    }

    table th, table td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: left;
    }

    table th {
      background-color: #CDF4F4;
    }

    /* ====== Suspend Button ====== */
    .action-btn.suspend-btn {
      margin-right: 5px;
      font-weight:700;
      padding: 5px 8px;
      border: none;
      border-radius: 100px;
      cursor: pointer;
      color: white;
      background-color: #f44336; /* red */
    }

    /* ====== Icon Actions ====== */
    .action-icon {
      margin-right: 10px;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
    }

    .action-icon svg {
      transition: opacity 0.2s;
    }

    .action-icon:hover svg {
      opacity: 0.7;
    }

    .edit-icon svg {
      
      fill: #FFD000; /* yellow */
    }

    .delete-icon svg {
      fill: #ed1e1e; /* red */
    }

    /* ====== No Records ====== */
    .no-records {
      margin-top: 20px;
      text-align: center;
      color: #555;
    }

    #searchMember {
      margin-top: 10px;
      max-width: 300px;
      margin-left: 30px;
      margin-right: 100px;
    }

    /* ====== Sidebar Active ====== */
    .nav-item.active {
      border-left: 3px solid #00a896; /* green left border */
      background-color: #095959;      /* dark teal bg */
    }
    
  .actions-container {
  display: flex;
  align-items: center;  /* vertically center icons/buttons */
  gap: 10px;            /* space between items */
}

 button{
  border-radius: 100px;
}

  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include('navbar') %>

  <div class="layout">
    <!-- Sidebar -->
    <div class="sidebar-container">
      <%- include('sidebar') %>
    </div>

    <!-- Main content -->
    <div class="main-content">
      <!-- Search and buttons -->
      <div class="sub-header">
        <input type="text" placeholder="Search member..." id="searchMember">
        <button onclick="location.href='/add-member'">Add Member</button>
        <button onclick="location.href='/add-category'">Add Category</button>
      </div>

      <!-- Members Table -->
      <% if (users && users.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.status %></td>
                <td>
  <div class="actions-container">
    <!-- Suspend button -->
    <button class="action-btn suspend-btn" onclick="location.href='/suspend-member/<%= user.id %>'">Suspend</button>

    <!-- Edit icon -->
    <a href="/edit-member/<%= user.id %>" class="action-icon edit-icon">
      <svg class="icon" viewBox="0 0 24 24" width="20" height="20">
        <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM21.41 6.34c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
      </svg>
    </a>

    <!-- Delete icon -->
    <a href="/delete-member/<%= user.id %>" class="action-icon delete-icon">
      <svg class="icon" viewBox="0 0 24 24" width="20" height="20" fill="#E53935">
        <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
      </svg>
    </a>
  </div>
</td>

              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <div class="no-records">No records found</div>
      <% } %>
    </div>
  </div>

</body>
</html>
