<style>
  body {
    margin: 0;
    background-color: #333; 
  }

  .sidebar {
    width: 55px;
    height: 91vh; 
    background-color: #095959; 
    display: flex;
    flex-direction: column;
    align-items: center;
    border-right: 1px solid #2c3e50;
  }

  .nav-item {
    width: 100%;
    padding: 15px 0;
    display: flex;
    justify-content: center;
    cursor: pointer;
    transition: background 0.3s ease;
    color: #fff; 
    text-decoration: none;
  }

  .nav-item:hover {
    background-color: #2c3e50;
  }

  .nav-item.active {
    border-left: 3px solid #00a896;
    background-color: #24333c;
  }

  .icon {
    width: 24px;
    height: 24px;
    fill: currentColor;
  }

  .spacer {
    flex-grow: 1;
  }

  /* ===== Professional Logout Modal Design ===== */

  .modal {
    display: none;
    position: fixed;
    z-index: 999;
    inset: 0;
    background: rgba(0, 0, 0, 0.65);
    backdrop-filter: blur(4px);
    justify-content: center;
    align-items: center;
    animation: fadeIn 0.3s ease;
  }

  .modal-content {
    background: #ffffff;
    padding: 30px 25px;
    border-radius: 12px;
    width: 340px;
    text-align: center;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
    animation: slideDown 0.3s ease;
    font-family: 'Segoe UI', sans-serif;
  }

  .modal-content h3 {
    margin: 0;
    font-size: 20px;
    color: #222;
  }

  .modal-content p {
    margin-top: 10px;
    font-size: 14px;
    color: #555;
  }

  .modal-content strong {
    color: #095959;
  }

  .modal-buttons {
    margin-top: 25px;
    display: flex;
    justify-content: space-between;
    gap: 10px;
  }

  .btn {
    flex: 1;
    padding: 10px 0;
    border: none;
    cursor: pointer;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn-logout {
    background: linear-gradient(135deg, #d9534f, #c9302c);
    color: #fff;
  }

  .btn-logout:hover {
    background: linear-gradient(135deg, #c9302c, #a71d2a);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(217, 83, 79, 0.4);
  }

  .btn-cancel {
    background-color: #f1f1f1;
    color: #333;
  }

  .btn-cancel:hover {
    background-color: #ddd;
    transform: translateY(-2px);
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

